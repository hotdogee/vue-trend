{
  "name": "vue3-trend",
  "description": "Simple, elegant spark lines for Vue 3",
  "version": "2.0.0",
  "homepage": "https://vue3-trend.hanl.in/",
  "repository": {
    "type": "git",
    "url": "https://github.com/hotdogee/vue3-trend.git"
  },
  "author": "Han Lin <hotdogee@gmail.com> (https://github.com/hotdogee)",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/vue3-trend.umd.cjs",
  "module": "./dist/vue3-trend.js",
  "types": "./dist/vue3-trend.d.ts",
  "exports": {
    ".": {
      "import": "./dist/vue3-trend.js",
      "require": "./dist/vue3-trend.umd.cjs"
    }
  },
  "keywords": [
    "vue",
    "vue3",
    "trend",
    "svg",
    "graph",
    "chart",
    "data-visualization",
    "component"
  ],
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "docs:build": "vite build docs --outDir dist",
    "docs:dev": "vite docs",
    "lint": "eslint . --fix",
    "format": "prettier --write src/"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitest/eslint-plugin": "^1.1.39",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.22.0",
    "eslint-plugin-vue": "~10.0.0",
    "hanabi": "^0.4.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.0.0",
    "npm-run-all2": "^7.0.2",
    "prettier": "3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "super-vue3-tabs": "^1.2.5",
    "typescript": "~5.8.0",
    "vite": "^6.2.4",
    "vite-plugin-dts": "^4.5.3",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vitest": "^3.1.1",
    "vue-3-slider-component": "^1.0.2",
    "vue-tsc": "^2.2.8",
    "vue3-swatches": "^1.2.4"
  }
}
